---
import Text from "@components/react/Typography"


const img = [
    {
        id: 1,
        img: '/images/astro.svg'
    },
    {
        id: 2,
        img: '/images/github.svg'
    },
    {
        id: 3,
        img: '/images/vercel.svg'
    }
]
---

<div class="flex flex-col mt-12 gap-4 items-center">
    <Text size="p3 sm:p2" weight="font-normal">Donate a coffee - RSS</Text>
    <div class="flex flex-row w-full items-center justify-center gap-4">
        {
            img.map((item) => (
                <div class="w-fit h-full relative">
                    <img src={item.img} class="h-[35px] sm:h-[40px]" alt="Icon - Portofolio" />
                </div>
            ))
        }
    </div>
</div>